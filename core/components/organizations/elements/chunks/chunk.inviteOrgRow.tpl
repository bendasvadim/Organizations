<tr>
    <td>
        [[+invite_code]]
    </td>
    <td>
        [[+fullname]]
    </td>
    <td>
        [[+email]]
    </td>
    <td>
        [[+user_group_name]]
    </td>
    <td >
        <div style="color: [[+sended_color]];">
            [[+sended_ru]]
        </div>
    </td>
    <td >
        <div style="color: [[+used_color]];">
            [[+used_ru]]
        </div>
    </td>

    <td>
        <a href="[[~[[*id]]]]?action=sendInvite&invite_id=[[+id]]">
            <span class="glyphicon glyphicon-send" ></span>
        </a>
        <a href="[[~[[*id]]]]?action=deleteInvite&invite_id=[[+id]]">
            <span class="glyphicon glyphicon-trash" style="color:red"></span>
        </a>
    </td>
</tr>

